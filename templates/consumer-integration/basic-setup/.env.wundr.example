# Wundr Dashboard Environment Configuration
# Copy this file to .env.wundr and customize for your project

# Branding Configuration
WUNDR_APP_NAME="My Project Dashboard"
WUNDR_PRIMARY_COLOR="#0066CC"
WUNDR_SECONDARY_COLOR="#6B7280"
WUNDR_LOGO="./assets/logo.png"
WUNDR_FAVICON="./assets/favicon.ico"
WUNDR_CUSTOM_CSS="./themes/custom.css"

# Analysis Configuration
WUNDR_DEFAULT_PATH="./src"
WUNDR_EXCLUDE_PATTERNS="node_modules,dist,build,.git,coverage"
WUNDR_INCLUDE_EXTENSIONS=".ts,.tsx,.js,.jsx,.vue,.py"
WUNDR_MAX_FILE_SIZE=1048576
WUNDR_ENABLE_REALTIME=false

# Server Configuration
WUNDR_PORT=3000
WUNDR_ENVIRONMENT=development
WUNDR_BASE_PATH="/"

# Security Configuration
WUNDR_SCRIPT_TIMEOUT=30000
WUNDR_DEFAULT_SAFETY_LEVEL=moderate
WUNDR_ALLOW_UNSAFE_SCRIPTS=false

# Integration Tokens (set these for your integrations)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# JIRA_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxx
# WEBHOOK_SECRET=your-webhook-secret-here

# Custom Script Environment
# Add any environment variables your scripts need
# API_URL=https://api.example.com
# DATABASE_URL=postgresql://user:pass@localhost/db
# REDIS_URL=redis://localhost:6379