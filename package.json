{
  "name": "@adapticai/wundr",
  "version": "1.0.0",
  "description": "The Intelligent CLI-Based Coding Agents Orchestrator - Transform monolithic chaos into architectural elegance with AI-powered refactoring at scale",
  "keywords": [
    "wundr",
    "coding-agents",
    "ai-refactoring",
    "monorepo",
    "refactoring",
    "analysis",
    "visualization",
    "dashboard",
    "cli-tool",
    "integration"
  ],
  "homepage": "https://wundr.io",
  "bugs": {
    "url": "https://github.com/adapticai/wundr/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adapticai/wundr.git"
  },
  "license": "MIT",
  "author": "Lumic.ai",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wundr": "./bin/wundr.js"
  },
  "files": ["dist", "bin", "src", "templates", "docs", "README.md", "LICENSE"],
  "scripts": {
    "build": "pnpm -r build",
    "build:all": "tsc",
    "build:watch": "pnpm -r --parallel build:watch",
    "clean": "pnpm -r clean",
    "create:package": "ts-node scripts/create-package.ts new",
    "dev": "pnpm -r --parallel dev",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "postinstall": "pnpm run build",
    "lint": "pnpm -r lint",
    "prepare": "husky",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance --runInBand",
    "test:e2e": "playwright test",
    "test:quality-gates": "jest tests/quality-gates",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=json-summary",
    "test:watch": "jest --watch",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:quality-gates",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.7",
    "chalk": "^5.3.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^10.3.10",
    "inquirer": "^9.2.0",
    "ora": "^5.4.1",
    "pnpm": "^10.14.0",
    "ts-morph": "^21.0.1",
    "ts-node": "^10.9.1",
    "uuid": "^11.0.3",
    "yaml": "^2.3.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix --max-warnings=0", "prettier --write"],
    "*.{js,jsx}": ["eslint --fix --max-warnings=0", "prettier --write"],
    "*.{json,yaml,yml,md}": ["prettier --write"]
  }
}
