{
  "name": "monorepo-refactoring-toolkit-setup",
  "version": "1.0.0",
  "description": "Setup dependencies and scripts for Monorepo Refactoring Toolkit",
  "private": true,
  "scripts": {
    "install": "bash install.sh",
    "verify": "bash verify-setup.sh",
    "lint": "eslint . --ext .ts,.tsx,.js --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "test": "jest --config ../jest.config.js",
    "test:watch": "jest --config ../jest.config.js --watch",
    "test:coverage": "jest --config ../jest.config.js --coverage",
    "test:unit": "jest --config ../jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config ../jest.config.js --testPathPattern=tests/integration",
    "test:ci": "jest --config ../jest.config.js --coverage --ci --watchAll=false --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --config ../jest.config.js --runInBand",
    "test:update-snapshots": "jest --config ../jest.config.js --updateSnapshot",
    "build": "tsc",
    "clean": "rm -rf node_modules dist build .nyc_output coverage",
    "reset": "npm run clean && npm install"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-html-reporters": "^3.1.4",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.0",
    "ts-morph": "^18.0.0",
    "ts-node": "^10.9.0",
    "@octokit/rest": "^19.0.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/scripts", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "scripts/**/*.ts",
      "!scripts/**/*.d.ts",
      "!scripts/**/*.test.ts",
      "!scripts/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "keywords": [
    "monorepo",
    "refactoring",
    "typescript",
    "analysis",
    "consolidation",
    "code-quality"
  ],
  "author": "Monorepo Refactoring Toolkit Team",
  "license": "MIT"
}
